<%- include("header") %>
<%- include("navbar") %>
<div class="container p-3">
    <div class="row p-3">
        <% movie.forEach(movie => { %>
            <div class="col-md-4 mt-3">
                <div class="card p-3">
                    <img src="/upload/<%=movie.image %>" class="card-img-top" alt="Movie Image">
                    <div class="card-body">
                        <h5 class="card-title">Name :<%= movie.name %></h5>
                        <p class="card-text">Description <%= movie.desc %></p>
                    </div>
                    <div style="display: flex; justify-content:space-evenly; padding: 10px;">
                        <a href="/deleteData/<%= movie.id %>"><button style="background-color: red; color: white; border-radius: 5px;">Delete</button></a>
                        <a href="/editData/<%= movie.id %>"><button style="background-color: blue; color: white; border-radius: 5px;">Edit</button></a>
                </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include("footer") %>
