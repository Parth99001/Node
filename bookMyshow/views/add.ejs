<%- include("header") %>
<%- include("navbar") %>
<div style="display: flex; margin-top: 30px;">
<form  method="post" action="/add" enctype="multipart/form-data" style="max-width: 400px; margin: 0 auto; padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h2>Add Movie Details</h2>
    <label for="name" style="font-size: 14px; color: #333; font-weight: bold; display: block; margin-bottom: 5px;">Name</label>
    <input type="text" id="name" name="name" style="width: 100%; padding: 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 15px;" required>

    <label for="" style="font-size: 14px; color: #333; font-weight: bold; display: block; margin-bottom: 5px;">Language</label>
    <input type="text" id="lan" name="lan" style="width: 100%; padding: 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 15px;" required>

    <label for="" style="font-size: 14px; color: #333; font-weight: bold; display: block; margin-bottom: 5px;">Image</label>
    <input type="file" id="image" name="image" style="width: 100%; padding: 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 15px;" required>

    <label for="" style="font-size: 14px; color: #333; font-weight: bold; display: block; margin-bottom: 5px;">Desciption</label>
    <textarea id="desc" name="desc" rows="4" style="width: 100%; padding: 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 20px;" required></textarea>

    <button type="submit" style="width: 100%; padding: 12px; background-color: #4f4caf; color: white; font-size: 16px; border: none; border-radius: 4px; cursor: pointer;">Submit</button>
</form>
</div>